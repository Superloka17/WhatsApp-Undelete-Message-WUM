{
  "manifest_version": 3,
  "name": "WhatsApp Undelete Plus",
  "version": "4.0",
  "description": "Recover deleted messages + Hide read receipts + More privacy features",
  "icons": {
    "16": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WhatsApp Undelete Plus",
    "default_icon": {
      "16": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["read-receipts-blocker.js"],
      "run_at": "document_start",       
      "all_frames": false
    },
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",     
      "all_frames": false
    }
  ],
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ]
}